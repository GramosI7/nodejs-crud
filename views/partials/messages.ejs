<% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
<div class="error-msg msg">
    <%= error.msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        &times;
    </button>
</div>
<% }); %> <% } %> <% if(success && success.length > 0) { %>
<div class="success-msg msg">
    <%= success %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        &times;
    </button>
</div>
<% } %>
