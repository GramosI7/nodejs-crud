<form action="/sport/modify/<%= result.id %>" method="POST">
  <label for="">Titre du sport</label>
  <input id="title" value="<%= result.title %>" name="title" type="text" />
  <label for="">Description du sport</label>
  <textarea id="description" rows="5" cols="80" name="description" type="text"><%= result.description %></textarea>
  <button id="modifySubmit">Send</button>
</form>